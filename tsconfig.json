{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "incremental": true,
        "diagnostics": true,
        "skipLibCheck": true,
        "types": ["reflect-metadata", "jest"],
        "baseUrl": ".",
        "lib": ["es6"],
        "paths": {
            "src/*": ["src/*"]
        }
    }
}