{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "incremental": true,
        "diagnostics": true,
        "skipLibCheck": true,
        "types": ["node", "reflect-metadata", "jest"],
        "baseUrl": ".",
        "lib": ["es6"],
        "paths": {
            "src/*": ["src/*"]
        },
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}